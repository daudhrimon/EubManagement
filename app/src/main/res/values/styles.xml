<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppPrimaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="minHeight">40dp</item>
        <item name="maxHeight">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_semi_large</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="EditTextAuth" parent="Widget.AppCompat.EditText">
        <item name="minHeight">40dp</item>
        <item name="maxHeight">40dp</item>
        <item name="android:padding">@dimen/spacing_primary</item>
        <item name="android:background">@drawable/edit_text_rounded_primary_border_bg</item>
        <item name="android:textSize">@dimen/font_secondary</item>
        <item name="android:drawablePadding">@dimen/spacing_primary_half</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">#80000000</item>
    </style>

    <style name="EditTextPrimary" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/font_primary</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_black</item>
    </style>

    <declare-styleable name="DashboardButton">
        <attr name="image" format="reference" />
        <attr name="text" format="string" />
    </declare-styleable>
</resources>